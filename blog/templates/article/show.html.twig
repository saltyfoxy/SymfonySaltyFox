{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ article.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ article.Content }}</td>
        </tr>
        </tbody>
    </table>
    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <li>{{ tag.name }} </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>

    <a class="arrow-back" href="{{ path('article_index') }}"><i class="far fa-arrow-alt-circle-left"></i></a>

    <a class="edit" href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}