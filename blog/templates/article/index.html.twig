{% extends 'base.html.twig' %}


{% block title %}Article index{% endblock %}

{% block body %}
    <h1 class="index-article">Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td><strong>{{ article.title }}</strong></td>
                <td>{{ article.content }}</td>
                <td>{{ article.slug }}</td>
                <td>
                    <a class="eye" href="{{ path('article_show', {'id': article.id}) }}">
                        <i class="far fa-eye"></i>
                    </a>
                    <a class="edit" href="{{ path('article_edit', {'id': article.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
